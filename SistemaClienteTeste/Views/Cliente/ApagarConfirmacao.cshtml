@model ClienteModel
@{
    ViewData["Title"] = "Confirmação apagar cliente";
}

<div class="text-center">
    <h3>Realmente deseja apagar o cliente (@Model.Cliente)?</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Cliente" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Cliente" asp-route-id="@Model.ClienteId" role="button">Confirmar exclusão</a>
